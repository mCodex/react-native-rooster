{
  "name": "react-native-rooster",
  "version": "1.2.0-beta.1",
  "description": "Your toast solution for react-native apps",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "jsnext:main": "build/index.es.js",
  "types": "build/index.d.ts",
  "keywords": [
    "react-native",
    "react-native-rooster",
    "ios",
    "android",
    "toast"
  ],
  "author": "mCodex",
  "license": "MIT",
  "homepage": "https://mcodex.dev/react-native-rooster/",
  "bugs": {
    "url": "https://github.com/mcodex/react-native-rooster/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mcodex/react-native-rooster.git"
  },
  "scripts": {
    "localPublish": "yalc publish && cd example && yalc add react-native-rooster --yarn && cd ..",
    "localPublishMacOS": "yalc publish && cd macOS-example && yalc add react-native-rooster --yarn && cd ..",
    "build": "rimraf -rf build && rollup -c",
    "prepublish": "yarn build",
    "test": "jest --coverage"
  },
  "dependencies": {
    "react-spring": "^9.0.0-rc.3"
  },
  "peerDependencies": {
    "lodash": "*",
    "react": "*",
    "react-native": "*",
    "styled-components": "*"
  },
  "devDependencies": {
    "@babel/runtime": "^7.11.2",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@testing-library/jest-native": "^3.3.0",
    "@testing-library/react-hooks": "^3.4.1",
    "@testing-library/react-native": "^7.0.1",
    "@types/jest": "^26.0.9",
    "@types/react": "^16.9.44",
    "@types/react-native": "^0.63.4",
    "@types/react-test-renderer": "^16.9.3",
    "@types/styled-components": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-jest": "^26.2.2",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.2.2",
    "lodash": "^4.17.19",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-native": "^0.63.2",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "rollup-plugin-peer-deps-external": "^2.2.3",
    "rollup-plugin-typescript2": "^0.27.1",
    "styled-components": "^5.1.1",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7",
    "yalc": "^1.0.0-pre.41"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "standard": {
    "ignore": [
      "node_modules/",
      "build/"
    ]
  }
}
